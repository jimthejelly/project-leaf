<body>
    <%- include("nav") %>

    <div class="welcome">
        <% if (user) { %>
            <h1 style="text-transform: capitalize;"><strong>Welcome <%= user.name %>!</strong></h1>
        <% } %>
    </div>

    <br>

    <div class="container board">

        <div class="row">

            <div class="col-sm-5 box">
                <h3><i class="fas fa-address-card"></i> Total Employees</h3>
                <div class="dashboard">
                    <h1><%= empcount %></h1>
                </div>
            </div>
            <div class="col-sm-2"></div>
            <div class="col-sm-5 box">
                <h3><i class="fas fa-shoe-prints"></i> Total Leaves</h3>
                <div class="dashboard">
                    <h1><%= leavecount %></h1>
                </div>
            </div>
        </div>

        <br>

        <div class="row">
            <div class="col-sm-5 box">
                <h3><i class="fas fa-thumbs-up"></i> Total Leaves Approved</h3>
                <div class="dashboard">
                    <h1><%= appcount %></h1>
                </div>
            </div>
            <div class="col-sm-2"></div>
            <div class="col-sm-5 box">
                <h3><i class="fas fa-thumbs-down"></i> Total Leaves Declined</h3>
                <div class="dashboard">
                    <h1><%= deccount %></h1>
                </div>
            </div>
        </div>
    </div>
</body>